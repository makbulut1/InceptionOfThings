Vagrant.configure("2") do |config|
  config.vm.define "makbulutS" do |makbulutS|
    makbulutS.vm.box = "debian/bookworm64"
    makbulutS.vm.network "private_network", ip: "192.168.56.113"

    makbulutS.vm.provider "virtualbox" do |vb|
      vb.cpus = 1
      vb.memory = "1024"
    end
    makbulutS.vm.provision "shell", inline: <<-SHELL
      bash /vagrant/scripts/init.sh
      bash /vagrant/scripts/server.sh
    SHELL
  end

  config.vm.define "makbulutSW" do |makbulutSW|
    makbulutSW.vm.box = "debian/bookworm64"
    makbulutSW.vm.network "private_network", ip: "192.168.56.114"

    makbulutSW.vm.provider "virtualbox" do |vb|
      vb.cpus = 1
      vb.memory = "1024"
    end

    makbulutSW.vm.provision "shell", inline: <<-SHELL
      bash /vagrant/scripts/init.sh
      bash /vagrant/scripts/agent.sh    
    SHELL
  end
end

